subtitle.TextSize = 14

-- Dropdown ch·ªçn ng∆∞·ªùi ch∆°i
local selectedPlayer = Instance.new("StringValue")
selectedPlayer.Value = ""

local dropDown = Instance.new("TextButton", Frame)
dropDown.Size = UDim2.new(0.7, 0, 0, 40)
dropDown.Position = UDim2.new(0.15, 40, 0, 60)
dropDown.Text = "Select Player"
dropDown.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
dropDown.TextColor3 = Color3.fromRGB(255, 255, 255)
dropDown.Font = Enum.Font.Gotham
dropDown.TextSize = 16

local avatarImage = Instance.new("ImageLabel", Frame)
avatarImage.Size = UDim2.new(0, 40, 0, 40)
avatarImage.Position = UDim2.new(0.15, 0, 0, 60)
avatarImage.BackgroundTransparency = 1
avatarImage.Image = "rbxthumb://type=AvatarHeadShot&id=1&w=100&h=100"

-- C·∫≠p nh·∫≠t dropdown & avatar
local players = game.Players:GetPlayers()
dropDown.MouseButton1Click:Connect(function()
    local random = players[math.random(1, #players)]
    dropDown.Text = random.Name
    selectedPlayer.Value = random.Name
    avatarImage.Image = "rbxthumb://type=AvatarHeadShot&id=" .. random.UserId .. "&w=100&h=100"
end)

-- T·∫°o n√∫t b·∫≠t/t·∫Øt ƒë·∫πp
function createToggle(yPos, text)
    local holder = Instance.new("Frame", Frame)
    holder.Size = UDim2.new(0.8, 0, 0, 30)
    holder.Position = UDim2.new(0.1, 0, 0, yPos)
    holder.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    holder.Name = text

    local label = Instance.new("TextLabel", holder)
    label.Text = text
    label.Size = UDim2.new(0.7, 0, 1, 0)
    label.BackgroundTransparency = 1
    label.TextColor3 = Color3.fromRGB(255, 255, 255)
    label.Font = Enum.Font.Gotham
    label.TextSize = 16

    local toggle = Instance.new("TextButton", holder)
    toggle.Size = UDim2.new(0.3, -10, 0.8, 0)
    toggle.Position = UDim2.new(0.7, 5, 0.1, 0)
    toggle.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
    toggle.Text = ""
    toggle.AutoButtonColor = false

    local round = Instance.new("UICorner", toggle)
    round.CornerRadius = UDim.new(1, 0)

    local circle = Instance.new("Frame", toggle)
    circle.Size = UDim2.new(0.5, -2, 1, -4)
    circle.Position = UDim2.new(0, 2, 0, 2)
    circle.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    local circleCorner = Instance.new("UICorner", circle)
    circleCorner.CornerRadius = UDim.new(1, 0)

    local on = false
    toggle.MouseButton1Click:Connect(function()
        on = not on
        if on then
            toggle.BackgroundColor3 = Color3.fromRGB(0, 200, 0)
            circle.Position = UDim2.new(1, -circle.AbsoluteSize.X - 2, 0, 2)
            circle.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
        else
            toggle.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
            circle.Position = UDim2.new(0, 2, 0, 2)
            circle.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
        end
    end)
end

-- C√°c n√∫t
createToggle(120, "Freeze Trade")
createToggle(160, "Auto-Injected")
createToggle(200, "Speed Bypass")

-- C·∫£nh b√°o
