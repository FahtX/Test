warning.Position = UDim2.new(0, 0, 1, -30)
warning.BackgroundTransparency = 1
warning.TextColor3 = Color3.fromRGB(255, 80, 80)
warning.Font = Enum.Font.GothamBold
warning.TextSize = 14
warning.Parent = mainFrame
