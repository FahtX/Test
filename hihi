local uc = Instance.new("UICorner", Username)
uc.CornerRadius = UDim.new(0, 6)

-- Function to create toggles
local function createToggle(text, yPosition)
	local toggle = Instance.new("TextButton", Frame)
	toggle.Size = UDim2.new(1, -40, 0, 30)
	toggle.Position = UDim2.new(0, 20, 0, yPosition)
	toggle.Text = text
	toggle.TextSize = 16
	toggle.Font = Enum.Font.Gotham
	toggle.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
	toggle.TextColor3 = Color3.fromRGB(255, 255, 255)
	toggle.BorderSizePixel = 0

	local corner = Instance.new("UICorner", toggle)
	corner.CornerRadius = UDim.new(0, 6)

	local isOn = false
	toggle.MouseButton1Click:Connect(function()
		isOn = not isOn
		toggle.TextColor3 = isOn and Color3.fromRGB(0, 255, 127) or Color3.fromRGB(255, 255, 255)
		toggle.Text = text .. (isOn and " ‚úÖ" or "")
	end)
end

-- Toggles
createToggle("Freeze Trade", 105)
createToggle("Auto-Injected", 145)
createToggle("Speed Bypass", 185)

-- Warning Label
local warning = Instance.new("TextLabel", Frame)
warning.Size = UDim2.new(1, -40, 0, 20)
warning.Position = UDim2.new(0, 20, 0, 230)
warning.Text = "‚ö†Ô∏è Only Use When In Trade ‚ÄºÔ∏è"
